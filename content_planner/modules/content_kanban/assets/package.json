{
  "name": "content_kanban",
  "version": "0.0.1",
  "description": "CSS and JS build tool for Content Kanban",
  "author": "Martin Penev",
  "scripts": {
    "build-css": "sass --source-map --load-path=scss src/scss:dist/css",
    "watch-css": "nodemon -e scss -x 'npm run build-css'",
    "all": "parallelshell 'npm run serve' 'npm run watch-css'"
  },
  "devDependencies": {
    "sass": "^1.76.0",
    "nodemon": "^1.0.0",
    "parallelshell": "^3.0.0"
  }
}
